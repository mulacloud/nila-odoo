<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="nila.list_job">
      <field name="name">Job</field>
      <field name="model">nila.job</field>
      <field name="arch" type="xml">
        <list>
          <field name="name"/>
          <field name="create_date" string="Submited date"/>
          <field name="write_date" string="Reported date"/>
          <field name="hoster_id"/>
          <field name="state"/>
        </list>
      </field>
    </record>
    
    <record model="ir.ui.view" id="nila.form_job">
      <field name="name">Job</field>
      <field name="model">nila.job</field>
      <field name="arch" type="xml">
          <form>
              <header>
                  <field name="state" widget="statusbar"/>
                  <button name="run" type="object" string="Run"/>
              </header>
            <sheet>
                <group>
                    <group>
                        <field name="name" readonly="1"/>
                        <field name="agent_id" readonly="1"/>
                        <field name="hoster_id"/>
                    </group>
                </group>
                <notebook>
                    <page string="Shell">
                        <field name="shell"/>
                    </page>
                    <page string="Output">
                        <field name="output" readonly="1"/>
                    </page>
                    <page string="Erorr">
                        <field name="error" readonly="1"/>
                    </page>
                </notebook>
            </sheet>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="nila.action_window_job">
      <field name="name">Job</field>
      <field name="res_model">nila.job</field>
      <field name="view_mode">list,form</field>
    </record>

    <menuitem name="job" id="nila.menu_job_list" parent="nila.menu_root"
              action="nila.action_window_job"/>
  </data>
</odoo>
