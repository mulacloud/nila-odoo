<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="nila.list_hoster">
      <field name="name">Agent</field>
      <field name="model">nila.hoster</field>
      <field name="arch" type="xml">
        <list>
          <field name="name"/>
          <field name="agent_id"/>
          <field name="os_type"/>
          <field name="ip"/>
        </list>
      </field>
    </record>
    
    <record model="ir.ui.view" id="nila.form_hoster">
      <field name="name">Hoster</field>
      <field name="model">nila.hoster</field>
      <field name="arch" type="xml">
          <form>
            <sheet>
                <group>
                    <group>
                        <field name="username"/>
                        <field name="password"/>
                        <field name="os_type"/>
                    </group>
                    <group>
                        <field name="name"/>
                        <field name="ip"/>
                        <field name="agent_id"  options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"/>
                    </group>
                </group>
            </sheet>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="nila.action_window_hoster">
      <field name="name">Hoster</field>
      <field name="res_model">nila.hoster</field>
      <field name="view_mode">list,form</field>
    </record>

    <menuitem name="Hoster" id="nila.menu_hoster_list" parent="nila.menu_root"
              action="nila.action_window_hoster"/>
  </data>
</odoo>
